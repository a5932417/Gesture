<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bg02"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ya1111"
    tools:context=".Situation">

    <VideoView
        android:id="@+id/situation_View"
        android:layout_width="381dp"
        android:layout_height="542dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_s_ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/situation_textView"
        app:srcCompat="@drawable/ic_launcher_background" />

    <ImageButton
        android:id="@+id/btn_s_ok"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:background="#00000000"
        android:scaleType="fitCenter"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/situation_View"
        app:srcCompat="@drawable/ok" />

    <TextView
        android:id="@+id/situation_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="70sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/situation_View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>